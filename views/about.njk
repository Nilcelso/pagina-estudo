{% extends "layout.njk" %}

{% block head %}

<title>Sobre - Nilcelso Sobrinho</title>

{% endblock %}


{% block content %}

    <div id="wrapper">
        <img src="{{ about.avatar }}" alt="Imabem de {{ about.name }}">
        <h1> {{ about.name }}</h1>
        <h2>{{ about.role }}</h2>
        <p>{{ about.discription }}</p>
    </div>
    <div id="links-footer" class= "links">
        {% for link in about.links %}

        <a href="{{ link.url }}" target="_blank"> {{ link.name}} </a>

        {% endfor %}
    </div>

{% endblock %}
